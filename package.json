{
    "name": "trail-client",
    "description": "Distributed tracing client for Node.js",
    "repository": "CatTail/node-trail-client",
    "version": "0.0.0",
    "main": "dist/index.js",
    "keywords": [],
    "files": [
        "dist"
    ],
    "devDependencies": {
        "babel-cli": "^6.7.7",
        "babel-eslint": "^6.0.4",
        "babel-plugin-transform-async-to-generator": "^6.8.0",
        "babel-plugin-transform-es2015-destructuring": "^6.8.0",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.8.0",
        "babel-plugin-transform-es2015-parameters": "^6.8.0",
        "eslint-plugin-babel": "^3.2.0",
        "isparta": "^4.0.0",
        "mocha": "^2.4.5",
        "opentracing": "^0.9.18",
        "should": "^8.3.1"
    },
    "license": "MIT",
    "dependencies": {
        "basictracer": "^0.1.0",
        "continuation-local-storage": "^3.1.7",
        "debug": "^2.2.0"
    },
    "scripts": {
        "debug": "mocha --debug-brk $npm_package_options_mocha",
        "build": "babel src -d dist --copy-files",
        "watch": "babel src -d dist --copy-files -w",
        "lint": "eslint .",
        "test": "NODE_ENV=test ./node_modules/.bin/_mocha --reporter spec $npm_package_options_mocha",
        "test-cov": "NODE_ENV=test isparta cover --root dist --report html _mocha -- $npm_package_options_mocha",
        "test-travis": "NODE_ENV=test isparta cover --root dist --report lcovonly _mocha -- $npm_package_options_mocha"
    },
    "options": {
        "mocha": "--require ./resources/mocha-bootload --check-leaks --full-trace dist/**/__tests__/**/*-test.js"
    }
}
